@using System.Text.Json
@using Domain.DTOs
@using WebChat.Client.Contracts
@inherits StoreSubscriberComponent
@inject ApprovalStore ApprovalStore
@inject IDispatcher Dispatcher
@inject IApprovalService ApprovalService

@if (_approvalRequest is not null)
{
    <div class="approval-modal-overlay">
        <div class="approval-modal">
            <div class="approval-header">
                <h3>Tool Approval Required</h3>
            </div>

            <div class="approval-content">
                @foreach (var request in _approvalRequest.Requests)
                {
                    <div class="tool-request">
                        <div class="tool-name">@FormatToolName(request.ToolName)</div>
                        @if (request.Arguments.Count > 0)
                        {
                            <div class="tool-arguments">
                                @foreach (var (key, value) in request.Arguments)
                                {
                                    <div class="argument">
                                        <span class="argument-key">@key:</span>
                                        <span class="argument-value">@FormatValue(value)</span>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>

            <div class="approval-actions">
                <button class="btn btn-reject" @onclick="HandleReject" disabled="@_isResponding">
                    Reject
                </button>
                <button class="btn btn-always" @onclick="HandleAlways" disabled="@_isResponding">
                    Always Approve
                </button>
                <button class="btn btn-approve" @onclick="HandleApprove" disabled="@_isResponding">
                    Approve
                </button>
            </div>
        </div>
    </div>
}

@code {
    private ToolApprovalRequestMessage? _approvalRequest;
    private bool _isResponding;

    protected override void OnInitialized()
    {
        Subscribe(ApprovalStore.StateObservable,
            state => state.CurrentRequest,
            request => _approvalRequest = request);
    }

    private async Task HandleApprove() => await RespondAsync(ToolApprovalResult.Approved);

    private async Task HandleAlways() => await RespondAsync(ToolApprovalResult.ApprovedAndRemember);

    private async Task HandleReject() => await RespondAsync(ToolApprovalResult.Rejected);

    private async Task RespondAsync(ToolApprovalResult result)
    {
        if (_approvalRequest is null || _isResponding)
            return;

        _isResponding = true;
        StateHasChanged();

        try
        {
            await ApprovalService.RespondToApprovalAsync(_approvalRequest.ApprovalId, result);
            Dispatcher.Dispatch(new ClearApproval());
        }
        finally
        {
            _isResponding = false;
        }
    }

    private static string FormatToolName(string toolName) => toolName.Split(':').Last();

    private static string FormatValue(object? value)
    {
        var formatted = value switch
        {
            null => "null",
            string s => s,
            JsonElement { ValueKind: JsonValueKind.String } je => je.GetString() ?? "",
            JsonElement je => je.GetRawText(),
            _ => value.ToString() ?? ""
        };
        return formatted.Length > 500 ? formatted[..500] + "..." : formatted;
    }
}
