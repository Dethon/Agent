# HTTPS for local access (self-signed)
:443 {
    tls internal {
        on_demand
    }

    handle /hubs/* {
        reverse_proxy agent:8080
    }

    handle {
        reverse_proxy webui:8080
    }
}

# HTTP for Cloudflare Tunnel
:80 {
    handle /hubs/* {
        reverse_proxy agent:8080
    }

    handle {
        reverse_proxy webui:8080
    }
}
